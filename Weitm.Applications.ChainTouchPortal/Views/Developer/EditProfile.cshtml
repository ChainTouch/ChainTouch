<div id="main">
    <div class="container-fluid">
        <div class="page-header">
            <div class="pull-left">
                <h1>Developers</h1>
            </div>
        </div>
        <div class="breadcrumbs">
            <ul>
                <li>
                    <a href="~/">Chain Touch Portal</a>
                    <i class="icon-angle-right"></i>
                </li>
                <li>
                    <a href="~/">Developers</a>
                </li>
            </ul>
            <div class="close-bread">
                <a href="#"><i class="icon-remove"></i></a>
            </div>
        </div>


        <div class="row-fluid">
            <div class="span12">
                <div class="box">
                    <div class="box-title">
                        <h3><i class="icon-edit"></i> Edit Profile</h3>
                    </div>
                    <div class="box-content">
                        <form action="" method="POST" class='form-horizontal' enctype="multipart/form-data">
                            <div class="control-group">
                                <label for="Name" class="control-label">Name of Developer</label>
                                <div class="controls">
                                    <input type="text" name="Name" id="textfield" class="input-xlarge" value="@Model.Name">
                                    <span class="help-block">Pls input the full name of your company</span>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">Property Type</label>
                                <div class="controls">
                                    <label class='checkbox'>
                                        <input type="checkbox" name="Type" value="workshop"> Workshop
                                    </label>
                                    <label class='checkbox'>
                                        <input type="checkbox" name="Type" value="warehouse"> Warehouse
                                    </label>
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="DevelopedGfaInChina" class="control-label">Developed GFA in China</label>
                                <div class="controls">
                                    <input type="text" name="DevelopedGfaInChina" id="DevelopedGfaInChina" value="@Model.DevelopedGfaInChina" class="input-small">sqm
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="NumberOfProjectsInChina" class="control-label">No. of Projects in China</label>
                                <div class="controls">
                                    <input type="text" name="NumberOfProjectsInChina" id="NumberOfProjectsInChina" value="@Model.NumberOfProjectsInChina" class="input-small">
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="ChinaHeadquarterAddress" class="control-label">China Headquarter Address</label>
                                <div class="controls">
                                    <input type="text" name="ChinaHeadquarterAddress" id="ChinaHeadquarterAddress" value="@Model.ChinaHeadquarterAddress" class="input-xlarge">
                                </div>
                            </div>
                            @*<div class="control-group">
        <label for="Contact" class="control-label">Contact</label>
        <div class="controls">
            <input type="text" name="LastName" id="LastName" class="input-small" placeholder="Last Name">
            <input type="text" name="FirstName" id="FirstName" class="input-small" placeholder="First Name">
            <br/>
            <input type="text" name="Department" id="Department" class="input-xlarge" placeholder="Department">
            <br />
            <input type="text" name="Title" id="Title" class="input-xlarge" placeholder="Title">
            <br />
            <input type="text" name="Mobile" id="Mobile" class="input-xlarge" placeholder="Mobile Phone">
            <br />
            <input type="text" name="Landline" id="Landline" class="input-xlarge" placeholder="Landline">
            <br />
            <input type="text" name="Email" id="Email" class="input-xlarge" placeholder="Email Address">
        </div>
    </div>*@

                            <div class="control-group">
                                <label for="BriefIntroduction" class="control-label">Brief Introduction</label>
                                <div class="controls">
                                    <textarea name="BriefIntroduction" id="BriefIntroduction" rows="10" class="input-block-level">@Model.BriefIntroduction</textarea>
                                    <span class="help-block">Pls briefly introduce your company.</span>
</div>
                            </div>
                            <div class="control-group">
                                <label for="Pictures" class="control-label">Pictures</label>
                                <div class="controls">
                                    <input type="file" name="Pictures" id="Pictures" class="input-block-level">
                                    <span class="help-block">Only .jpg (Max Size: 100MB)</span>
                                </div>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <button type="button" class="btn">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>