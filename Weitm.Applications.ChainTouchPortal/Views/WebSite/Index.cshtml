@using Weitm.Modules.ChainTouch.Models;
@using Weitm.Modules.Article.Models;
@using Weitm.Modules.WebSite.Models;

@{
    var industrialParks = IndustrialPark.Get();
}
<div id="left">
    @Html.Partial("_SidebarPartial")
</div>
<div id="main">
    <div class="container-fluid">
        <div class="page-header">
            <div class="pull-left">
                <h1>Tracer</h1>
            </div>
        </div>
        <div class="breadcrumbs">
            <ul>
                <li>
                    <a href="~/">Chain Touch Portal</a>
                    <i class="icon-angle-right"></i>
                </li>
                <li>
                    <a href="~/">Tracer</a>
                </li>
            </ul>
            <div class="close-bread">
                <a href="#"><i class="icon-remove"></i></a>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <div class="box box-color box-bordered">
                    <div class="box-title">
                        <h3>
                            <i class="icon-bar-chart"></i>
                            Tracer
                        </h3>
                        <div class="actions">
                            <a href="#" class="btn btn-mini content-refresh"><i class="icon-refresh"></i></a>
                            <a href="#" class="btn btn-mini content-remove"><i class="icon-remove"></i></a>
                            <a href="#" class="btn btn-mini content-slideUp"><i class="icon-angle-down"></i></a>
                        </div>
                    </div>
                    <div class="box-content nopadding">
                        <table class="table table-hover table-nomargin">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Trace Item</th>
                                    <th>Records</th>
                                    <th>Last Updated</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                 <tr>
                                    <td>1</td>
                                    <td>Page View</td>
                                    <td>
                                        @Visitor.Get().Where(p => p.RawUrl.Contains(@"/MarketNews/Show/")).Count()
                                    </td>
                                    <td>
                                        @DateTime.Now
                                    </td>
                                    <td><a href="~/WebSite/TracePageView/" class="btn">Detail</a></td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Property Search</td>
                                    <td>
                                        @Visitor.Get().Where(p => p.RawUrl.Contains(@"/Search/")).Count()
                                    </td>
                                    <td>
                                        @DateTime.Now
                                    </td>
                                    <td><a href="~/WebSite/TracePropertySearch/" class="btn">Detail</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>