@using Weitm.Modules.ChainTouch.Models;
@using Weitm.Modules.Article.Models;
@using Weitm.Modules.WebSite.Models;

@{
    var visitors = Visitor.Get().Where(p=>p.RawUrl.Contains("Search"));
}
<div id="left">
    @Html.Partial("_SidebarPartial")
</div>
<div id="main">
    <div class="container-fluid">
        <div class="page-header">
            <div class="pull-left">
                <h1>Trace Property Search</h1>
            </div>
        </div>
        <div class="breadcrumbs">
            <ul>
                <li>
                    <a href="~/">Chain Touch Portal</a>
                    <i class="icon-angle-right"></i>
                </li>
                <li>
                    <a href="~/">Trace Property Search</a>
                </li>
            </ul>
            <div class="close-bread">
                <a href="#"><i class="icon-remove"></i></a>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <div class="box box-color box-bordered">
                    <div class="box-title">
                        <h3>
                            <i class="icon-bar-chart"></i>
                            Trace Property Search
                        </h3>
                        <div class="actions">
                            <a href="#" class="btn btn-mini content-refresh"><i class="icon-refresh"></i></a>
                            <a href="#" class="btn btn-mini content-remove"><i class="icon-remove"></i></a>
                            <a href="#" class="btn btn-mini content-slideUp"><i class="icon-angle-down"></i></a>
                        </div>
                    </div>
                    <div class="box-content nopadding">
                        <table class="table table-hover table-nomargin">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Property Search</th>
                                    <th>Host Address</th>
                                    <th>Browser</th>
                                    <th>Visit Time</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                }
                                @foreach (var visitor in visitors)
                                {
                                    <tr>
                                        <td>@(i++)</td>
                                        <td>@visitor.Comment</td>
                                        <td>@visitor.UserHostAddress</td>
                                        <td>@visitor.Browser</td>
                                        <td>@visitor.VisitTime</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>