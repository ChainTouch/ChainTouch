@using Weitm.Modules.Membership.Models;
@model RegisterModel

@{
    Layout = null;
}


<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
	<!-- Apple devices fullscreen -->
	<meta name="apple-mobile-web-app-capable" content="yes" />
	<!-- Apple devices fullscreen -->
	<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
	
	<title>Chain Touch Portal</title>

	<!-- Bootstrap -->
	<link rel="stylesheet" href="~/Content/flat/css/bootstrap.min.css">
	<!-- Bootstrap responsive -->
	<link rel="stylesheet" href="~/Content/flat/css/bootstrap-responsive.min.css">
	<!-- icheck -->
	<link rel="stylesheet" href="~/Content/flat/css/plugins/icheck/all.css">
	<!-- Theme CSS -->
	<link rel="stylesheet" href="~/Content/flat/css/style.css">
	<!-- Color CSS -->
	<link rel="stylesheet" href="~/Content/flat/css/themes.css">


	<!-- jQuery -->
	<script src="~/Content/flat/js/jquery.min.js"></script>
	
	<!-- Nice Scroll -->
	<script src="~/Content/flat/js/plugins/nicescroll/jquery.nicescroll.min.js"></script>
	<!-- Validation -->
	<script src="~/Content/flat/js/plugins/validation/jquery.validate.min.js"></script>
	<script src="~/Content/flat/js/plugins/validation/additional-methods.min.js"></script>
	<!-- icheck -->
	<script src="~/Content/flat/js/plugins/icheck/jquery.icheck.min.js"></script>
	<!-- Bootstrap -->
	<script src="~/Content/flat/js/bootstrap.min.js"></script>
	<script src="~/Content/flat/js/eakroko.js"></script>

	<!--[if lte IE 9]>
		<script src="~/Content/flat/js/plugins/placeholder/jquery.placeholder.min.js"></script>
		<script>
			$(document).ready(function() {
				$('input, textarea').placeholder();
			});
		</script>
	<![endif]-->
	

	<!-- Favicon -->
    <link rel="shortcut icon" href="~/Images/favicon.ico" />
	<!-- Apple devices Homescreen icon -->
	<link rel="apple-touch-icon-precomposed" href="~/Content/flat/img/apple-touch-icon-precomposed.png" />
    <link href="~/Styles/style.css" rel="stylesheet" />
</head>

<body class="login theme-satblue" data-theme="theme-satblue">
    <div class="wrapper">
        <h1><a href="/">Chain Touch Portal</a></h1>
        <div class="login-body">
            <h2>Register</h2>
            <form method="post" class="form-validate" id="test">
                @Html.AntiForgeryToken()
                <div class="control-group">
                    <div class="email controls">
                        <input type="email" name='Email' id="Email" placeholder="Email" class='input-block-level' data-rule-required="true">
                    </div>
                </div>
                <div class="control-group">
                    <div class="pw controls">
                        <input type="password" name="Password" id="Password" placeholder="Password" class='input-block-level' data-rule-required="true">
                    </div>
                </div>
                <div class="control-group">
                    <div class="pw controls">
                        <input type="password" name="ConfirmPassword" id="ConfirmPassword" placeholder="Confirm Password" class='input-block-level' data-rule-required="true">
                    </div>
                </div>
                <div class="submit">
                    <input type="submit" value="Register" class='btn btn-primary'>
                </div>
                <p class="error-message">
                    Register Not Opened 
                    @Html.ValidationSummary()
                </p>
            </form>
            <div class="forget">
                <a href="/Account/Login/"><span>Return to Login</span></a>
            </div>
        </div>

        @Html.Partial("_CounterPartial")
    </div>
</body>

</html>
