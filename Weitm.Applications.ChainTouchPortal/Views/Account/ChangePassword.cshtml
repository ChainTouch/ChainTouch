<div id="left">
    @Html.Partial("_SidebarPartial")
</div>
<div id="main">
    <div class="container-fluid">
        <div class="page-header">
            <div class="pull-left">
                <h1>Change Passoword</h1>
            </div>
        </div>
        <div class="breadcrumbs">
            <ul>
                <li>
                    <a href="~/">Chain Touch</a>
                    <i class="icon-angle-right"></i>
                </li>
                <li>
                    <a href="~/Account/ChangePassoword/">Change Passoword</a>
                </li>
            </ul>
            <div class="close-bread">
                <a href="#"><i class="icon-remove"></i></a>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="box box-color box-bordered">
                    <div class="box-title">
                        <h3>
                            <i class="icon-bar-chart"></i>
                            Change Passoword
                        </h3>
                        <div class="actions">
                            <a href="#" class="btn btn-mini content-refresh"><i class="icon-refresh"></i></a>
                            <a href="#" class="btn btn-mini content-remove"><i class="icon-remove"></i></a>
                            <a href="#" class="btn btn-mini content-slideUp"><i class="icon-angle-down"></i></a>
                        </div>
                    </div>
                    <div class="box-content nopadding">
                        <form method="post" class="form-horizontal form-bordered">
                            <div class="control-group">
                                <label for="textfield" class="control-label">Old Password</label>
                                <div class="controls">
                                    <input type="password" name="OldPassword" id="OldPassword" class="input-xlarge">
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="textfield" class="control-label">New Password</label>
                                <div class="controls">
                                    <input type="password" name="NewPassword" id="NewPassword" class="input-xlarge">
                                </div>
                            </div>
                            <div class="control-group">
                                <label for="textfield" class="control-label">Confrim Password</label>
                                <div class="controls">
                                    <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="input-xlarge">
                                </div>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <button type="button" class="btn">Reset</button>
                                <p style="color:red;">@ViewBag.Message</p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
