@using Weitm.Modules.ChainTouch.Models;

@{

}
<div id="left">
    @Html.Partial("_SidebarPartial")
</div>
<div id="main">
    <div class="container-fluid">
        <div class="page-header">
            <div class="pull-left">
                <h1>LBS Cloud</h1>
            </div>
        </div>
        <div class="breadcrumbs">
            <ul>
                <li>
                    <a href="~/">Chain Touch Portal</a>
                    <i class="icon-angle-right"></i>
                </li>
                <li>
                    <a href="~/">LBS Cloud</a>
                </li>
            </ul>
            <div class="close-bread">
                <a href="#"><i class="icon-remove"></i></a>
            </div>
        </div>


        <div class="row-fluid">
            <div class="span12">
                <ul class="tiles">
                    <li class="satblue long">
                        <a href="~/BaiduMap/">
                            <span><i class="icon-cogs"></i></span>
                            <span class="name">Manage Baidu Map - LBS Cloud</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span12">
                <div class="box box-color box-bordered">
                    <div class="box-title">
                        <h3>
                            <i class="icon-bar-chart"></i>
                            Baidu Map - LBS Cloud
                        </h3>
                        <div class="actions">
                            <a href="#" class="btn btn-mini content-refresh"><i class="icon-refresh"></i></a>
                            <a href="#" class="btn btn-mini content-remove"><i class="icon-remove"></i></a>
                            <a href="#" class="btn btn-mini content-slideUp"><i class="icon-angle-down"></i></a>
                        </div>
                    </div>
                    <div class="box-content nopadding">
                        <table class="table table-hover table-nomargin">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Local Records</th>
                                    <th>Cloud Records</th>
                                    <th>Last Updated Time</th>
                                    <th>Manage</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Baidu Map</td>
                                    <td><span class="label label-green">Running</span></td>
                                    <td>@Property.Count()</td>
                                    <td>@Property.Count()</td>
                                    <td>@DateTime.Now</td>
                                    <td>
                                        <a href="javascript:void(null);" class="btn">Sync</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>