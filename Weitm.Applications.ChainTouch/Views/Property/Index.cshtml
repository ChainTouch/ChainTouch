@section header{
    <style type="text/css">
        .lisitng-grid-layout .main { margin:0px;}
        #overview .map-wrap { border-top: 1px solid #dedede; padding:0px}
        #overview .map-label { top:0px; right:0px;}
        #overview #property_map { height: 650px; }
         .option-bar { margin-right: 15px; }
    </style>
} 

<!-- Page Head -->
<div class="page-head" style="background-repeat: no-repeat;background-position: center top;background-image: url('@Url.Content("~/Images/page-head-image.jpg")'); ">
    <div class="container">
        <div class="wrap clearfix">
            <h1 class="page-title"><span>Property</span></h1>
            <p>700xxx Shanghai, China</p>
        </div>
    </div>
</div>

<!-- Content -->
<div class="container contents lisitng-grid-layout">

    <div class="row">

        <div class="span6 main-wrap">

            <!-- Main Content -->
            <div class="main">

                <section id="overview">

                    <div class="map-wrap clearfix">
                        <span class="map-label">Property Map</span>
                        <div id="property_map">

                        </div>

