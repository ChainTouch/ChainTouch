                    </div>
                </section>

            </div><!-- End Main Content -->

        </div> <!-- End span9 -->

        <div class="span6 sidebar-wrap">
            <!-- Sidebar -->
            <aside class="sidebar">

                <section class="widget advance-search">
                    <h4 class="title search-heading">Find Your Property<i class="icon-search"></i></h4>
                    <div class="as-form-wrap">
                        <form class="advance-search-form clearfix" action="#" method="get">

                            <div class="option-bar">
                                <label>Type</label>
                                <span class="selectwrap">
                                    <select name="location" id="select-location" class="search-select">
                                        <option value="any" selected="selected">Any</option>
                                        <option value="miami">Factory</option>
                                        <option value="newyork">Warehouse</option>
                                    </select>
                                </span>
                            </div>

                            <div class="option-bar">
                                <label>Location</label>
                                <span class="selectwrap">
                                    <input type="text" />
                                </span>
                            </div>

                            <input type="submit" value="Search" class=" real-btn btn">
                        </form>
                    </div>
                    @for (int i = 1; i <= 2; i++)
                    {
                        <article class="property-item clearfix">
                            <figure>
                                <a href="#" title="12345 Southwest 39th Shanghai">
                                    <img src="~/Images/property.jpg" alt="12345 Southwest 39th Shanghai" title="12345 Southwest 39th Shanghai">
                                </a>
                                <figcaption>On Rent</figcaption>
                            </figure>
                            <div class="detail">
                                <h5 class="price">$x,xxx Per Month<small> - type I</small></h5>
                                <p>Here we write some introduction…</p>
                                <a class="more-details" href="~/Property/Detail/">More Details <i class="icon-caret-right"></i></a>
                            </div>
                        </article>
                    }
                    <div class="pagination clearfix">
                        <a href="#" class="real-btn current">1</a>
                        <a href="#" class="real-btn">2</a>
                        <a href="#" class="real-btn">3</a>
                        <a href="#" class="real-btn">4</a>
                        <a href="#" class="real-btn">5</a>
                        <a href="#" class="real-btn">...</a>
                    </div>
                </section>
            </aside><!-- End Sidebar -->

        </div>

    </div><!-- End contents row -->

</div><!-- End Content -->