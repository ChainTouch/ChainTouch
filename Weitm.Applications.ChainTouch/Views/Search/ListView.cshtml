                        <div class="span6">@Html.Partial("_PropertyListItemPartial")</div>
                        <div class="span6">@Html.Partial("_PropertyListItemPartial")</div>
                        <div class="span6">@Html.Partial("_PropertyListItemPartial")</div>
                        <div class="span6">@Html.Partial("_PropertyListItemPartial")</div>
                    </div>

                    <div class="pagination">
                        .
                        <a href="#" class="real-btn current">1</a>
                        <a href="#" class="real-btn">2</a>
                    </div>
                </section>

            </div><!-- End Main Content -->

        </div> <!-- End span9 -->
