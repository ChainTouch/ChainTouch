<!-- Page Head -->
<div class="page-head" style="background-repeat: no-repeat;background-position: center top;background-image: url('@Url.Content("~/Images/page-head-image.jpg")'); ">
    <div class="container">
        <div class="wrap clearfix">
            <h1 class="page-title"><span>Properties Listing Searching Result</span></h1>
            <p>Properties Searching Result Listing in Simple Layout</p>
        </div>
    </div>
</div>

<!-- Content -->
